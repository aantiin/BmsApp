<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>

	<!-- Default -->
	<definition name="defaultTemplate" template="/public/main/main.jsp">
		<put-attribute name="header" value="/public/main/header.jsp" />
		<put-attribute name="footer" value="/public/main/footer.jsp" />
		<put-attribute name="sidebar" value="/public/main/sidebar.jsp" />
	</definition>

	<definition name="index" extends="defaultTemplate">
		<put-attribute name="body" value="/public/index.jsp" />
	</definition>
	<definition name="book-search" extends="defaultTemplate">
		<put-attribute name="body" value="/public/bookSearch.jsp" />
	</definition>
	<definition name="book-add" extends="defaultTemplate">
		<put-attribute name="body" value="/public/bookAdd.jsp" />
	</definition>
	<definition name="author-add" extends="defaultTemplate">
		<put-attribute name="body" value="/public/authorForm.jsp" />
	</definition>
	<definition name="author-list" extends="defaultTemplate">
		<put-attribute name="body" value="/public/authorList.jsp" />
	</definition>

</tiles-definitions>